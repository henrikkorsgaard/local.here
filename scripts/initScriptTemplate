case "$1" in
    start)
        echo "Starting webstrate-pi service"
		echo "starting webstrate-pi service" > /var/log/webstrate-pi/webstrate-pi.log
		${path}/scripts/start.sh ${path} > /var/log/webstrate-pi/logs.log 2> /var/log/webstrate-pi/errors.log
        ;;
    stop)
        echo "Stopping webstrate-pi service"
		echo "Stopping webstrate-pi service" > /var/log/webstrate-pi/logs.log
        killall webstrate-pi
        ;;
    *)
        echo "Usage: /etc/init.d/webstrate-pi start|stop"
        exit 1
        ;;
esac

exit 0
